<!DOCTYPE HTML>

<html>
  <head>
    <title>League Scoreboard</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>

    <h1>Leader Board</h1>

    <h2>Wins</h2>
    <ul>
      <% @winnners.each do |team, score| %>
        <li><%= "#{team} ------ #{score}" %></li>
      <% end %>
    </ul>

    <h2> Losses </h2>
    <ul>
      <% @losses.each do |team, score| %>
        <li><%= "#{team} ------ #{score}" %></li>
      <% end %>
    </ul>
  </body>
</html>
